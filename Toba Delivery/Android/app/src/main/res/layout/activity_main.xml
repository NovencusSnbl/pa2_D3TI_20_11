<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="83dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@string/common_google_play_services_updating_text"
        android:text="Toba Delivery"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:text="Daftar Produk"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        android:layout_height="80dp"
        android:onClick="pesan"
        android:drawableLeft="@drawable/ic_store_mall_directory_black_24dp"
        />

    <Button
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:text="Daftar Pembayaran"
        android:background="#2196F3"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:onClick="bayar"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/ic_credit_card_black_24dp"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Logout"
        android:background="#B33C3C"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:id="@+id/logout"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

</LinearLayout>